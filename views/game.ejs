<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div
      class="container w-25 mt-4 text-center"
      style="height: auto"
      id="startContainer"
    >
      <h2>Permainan Kata</h2>
      <form
        method="post"
        action="http://localhost:3004/api/v1/start"
        id="start"
      >
        <input
          type="submit"
          class="btn btn-danger w-100"
          value="Mulai Permainan"
          id="startButton"
        />
      </form>
    </div>
    <div
      class="container w-25 mt-4 text-center"
      style="height: auto"
      id="gameContainer"
    >
      <h2>Permainan Kata telah dimulai!</h2>
      <div id="game-info">
        <span id="current-letter"></span>
        <span id="remaining-time"></span>
      </div>
      <div
        class="alert alert-danger alert-dismissible fade show"
        role="alert"
        id="alertConfirm"
      >
        <strong>Kata tidak terdaftar</strong> coba lagi!
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <div
        class="alert alert-danger alert-dismissible fade show"
        role="alert"
        id="alertTime"
      >
        <strong>Waktu anda sudah habis!</strong>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <form id="word-form">
        <input type="text" id="word-input" placeholder="Enter a word..." />
        <button class="btn btn-danger" id="submitWord" type="submit">
          Submit
        </button>
      </form>
      <div id="submitted-words"></div>
      <div id="scores"></div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/socket.io/socket.io.js"></script>

    <script>
      const socket = io();
      socket.on('connect', () => console.log('coba bisa ga'));

      const startContainer = document.getElementById('startContainer');
      const gameContainer = document.getElementById('gameContainer');
      const submitWord = document.getElementById('submitWord');
      const wordInput = document.getElementById('word-input');
      const alertConfirm = document.getElementById('alertConfirm');
      const alertTime = document.getElementById('alertTime');

      alertConfirm.style.display = 'none';
      alertTime.style.display = 'none';
      startContainer.style.display = 'block';
      gameContainer.style.display = 'none';

      socket.on('game-started', ({ currentLetter, remainingTime }) => {
        document.getElementById('current-letter').innerHTML = currentLetter;
        document.getElementById('remaining-time').innerHTML = remainingTime;
        if (remainingTime == 0) {
          alertTime.style.display = 'block';
          setInterval(() => {
            alertTime.style.display = 'none';
          }, 5000);
        }
      });

      submitWord.addEventListener('click', (e) => {
        e.preventDefault();
        console.log(wordInput.value);
        socket.emit('findWord', wordInput.value);
        socket.on('wordFinded', ({ confirm, word, score }) => {
          console.log(confirm);
          if (confirm == 'finded') {
            socket.emit('submitWord', {
              game: gameIdSave,
              word: word,
              score: score,
            });
            socket.off('wordFinded');
          } else if (confirm == 'null') {
            alertConfirm.style.display = 'block';
            setInterval(() => {
              alertConfirm.style.display = 'none';
            }, 5000);
            socket.off('wordFinded');
          }
        });
        wordInput.value = '';
      });

      startButton.addEventListener('click', (e) => {
        e.preventDefault();
        socket.emit('startGame', 'start');
        startContainer.style.display = 'none';
        gameContainer.style.display = 'block';
      });
    </script>
  </body>
</html>
