<body>
  <header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
      </div>
      <div class="col-4 text-center">
        <h1 class="fw-bold">Permainan Kata</h2>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
      </div>
    </div>
  </header>

  <div class="container w-25 mt-4 text-center" style="height: auto" id="startContainer">

    <form method="post" action="http://localhost:3004/api/v1/start" id="start">
      <input type="submit" class="btn btn-danger w-100" value="Mulai Permainan" id="startButton" />
    </form>
  </div>

  <div class="container w-25 mt-4 text-center" style="height: auto" id="gameContainer">
    <h3 id="permainan" class="fw-bold">Permainan Kata telah dimulai!</h3>
    <div id="game-info">
      <h4 id="current-letter-depan">Huruf: <mark class="text-danger" id="current-letter"></mark></h4>
      <h4 class="text-danger">
        <div id="countdown"></div>
      </h4>
    </div>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertConfirm">
      <strong>Kata tidak terdaftar</strong> coba lagi!
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <!-- <div
        class="alert alert-danger alert-dismissible fade show"
        role="alert"
        id="alertTime"
      >
        <strong>Waktu anda sudah habis!</strong>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div> -->

    <div class="alert alert-primary alert-dismissible fade show" role="alert" id="gameSummary">
      <strong>RINGKASAN PERMAINAN</strong>
      <p>
        Total nilai: <span id="total-score"></span> <br />
        Kata yang benar: <span id="total-words"></span>
      </p>
      <!-- <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button> -->

      <button type="button" class="btn btn-primary w-100" onClick="window.location.reload()">
        Ulang
      </button>
    </div>

    <form id="word-form">
      <input type="text" id="word-input" placeholder="Enter a word..." />
      <button class="btn btn-danger" id="submitWord" type="submit">
        Submit
      </button>
    </form>
    <div id="submitted-words"></div>
    <div id="scores"></div>
  </div>

  <div class="container mt-4 text-center" style="height: auto" id="tableContainer">
    <!-- <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Cari kata ..." title="Type in a name"> -->
    <table id="myTable">
      <thead>
        <tr class="header">
          <th>Kata</th>
          <th>Skor</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>


  <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>

  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <script src="/socket.io/socket.io.js"></script>


  <script>
